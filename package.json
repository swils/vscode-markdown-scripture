{
  "name": "markdown-scripture",
  "version": "0.0.1",
  "displayName": "Markdown Scripture",
  "publisher": "stefanwils",
  "description": "Allow your Markdown notes to track references and include quotes from verse-based documents such as the Bible. This makes it easy to keep detailed Markdown notes on Holy Scripture.",
  "categories": [
    "Notebooks",
    "Other",
    "Programming Languages",
    "Snippets"
  ],
  "keywords": [
    "markdown",
    "notebook",
    "notes",
    "notetaking",
    "tagging",
    "bible",
    "scripture"
  ],
  "engines": {
    "vscode": "^1.56.0"
  },
  "activationEvents": [
    "onLanguage:markdown",
    "onCommand:markdown-scripture.helloWorld"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "markdown-scripture.resetCache",
        "title": "Markdown Scripture: Reset cache"
      }
    ],
    "configuration": {
      "title": "Markdown Scripture",
      "properties": {
        "markdownScripture.sources": {
          "type": "array",
          "description": "Locations of source files as a list of glob patterns with an optional reference specification.",
          "items": {
            "type": "object",
            "properties": {
              "include": {
                "type": "string"
              },
              "ref": {
                "type": "string",
                "default": "${filename}"
              }
            }
          },
          "default": []
        }
      }
    },
    "markdown.markdownItPlugins": true
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/chai": "^4.2.18",
    "@types/glob": "^7.1.3",
    "@types/lodash": "^4.14.170",
    "@types/markdown-it": "^12.0.1",
    "@types/minimatch": "^3.0.4",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/sinon": "^10.0.2",
    "@types/sinon-chai": "^3.2.5",
    "@types/vscode": "^1.56.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "chai": "^4.3.4",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "sinon": "^11.1.1",
    "sinon-chai": "^3.7.0",
    "typescript": "^4.1.3",
    "vsce": "^1.93.0",
    "vscode-test": "^1.5.0"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "markdown-it": "^12.0.6",
    "markdown-it-for-inline": "^0.1.1",
    "minimatch": "^3.0.4"
  }
}
